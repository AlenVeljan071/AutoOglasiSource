<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AutoOglasiSource.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AutoOglasiSource.View"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <Tab Icon="home.svg">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Icon="add.svg">
            <ShellContent ContentTemplate="{DataTemplate local:AddPage}" />
        </Tab>
        <Tab Icon="user.svg">
            <ShellContent ContentTemplate="{DataTemplate local:UserPage}" />
        </Tab>
        <Tab Icon="settings.svg">
            <ShellContent ContentTemplate="{DataTemplate local:EditUserPage}" />
        </Tab>
    </TabBar>

</Shell>